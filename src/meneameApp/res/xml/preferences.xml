<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/pref_account">
		<EditTextPreference
			android:name="pref_account_user"
			android:title="@string/pref_account_user" 
			android:summary="@string/pref_account_user_summary"
			android:defaultValue="" 
			android:key="pref_account_user"/>
		<EditTextPreference
			android:name="pref_account_apikey"
			android:title="@string/pref_account_apikey"
			android:key="pref_account_apikey"
			android:summary="@string/pref_account_apikey_summary"
			android:defaultValue="" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_app">
		<CheckBoxPreference
			android:key="pref_app_refreshonlaunch"
			android:title="@string/pref_app_refreshonlaunch"
			android:summary="@string/pref_app_refreshonlaunch_summary"
			android:defaultValue="false" />
		<ListPreference
			android:key="pref_app_storage" 
			android:summary="@string/pref_app_storage_summary" 
			android:title="@string/pref_app_storage" 
			android:entries="@array/pref_app_storage_entries" 
			android:entryValues="@array/pref_app_storage_values" 
			android:defaultValue="Internal" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_style">
		<ListPreference 
			android:key="pref_style_mainanimation" 
			android:summary="@string/pref_style_mainanimation_summary" 
			android:title="@string/pref_style_mainanimation" 
			android:entries="@array/pref_style_mainanimation_entries" 
			android:entryValues="@array/pref_style_mainanimation_values" 
			android:defaultValue="None" />
	</PreferenceCategory>
</PreferenceScreen>